{
    "extends": "airbnb",
    "plugins": [
        "react",
        "mocha"
    ],
    "env": {
        "mocha": true,
        "es6": true
    },
    "rules": {
        "no-use-before-define": ["error", "nofunc"],
        "no-param-reassign": "off",
        "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
        "strict": ["error", "safe"],
        "no-empty": ["error", { "allowEmptyCatch": true }],
        "no-shadow": "off",
        "no-underscore-dangle": "off"
    },
    "parserOptions": {
        "sourceType": "script"
    },
    "globals": {
        "window": true,
        "angular": true,
        "Chart": true,
        "jQuery": true
    }
}